# ============================================
# DATABASE CONFIGURATION
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# ============================================

# Contoh Mac (Homebrew, tanpa password):
# DATABASE_URL="postgresql://fahrin@localhost:5432/starterkit?schema=public"

# Contoh Mac/Windows (dengan password):
# DATABASE_URL="postgresql://postgres:password_kamu@localhost:5432/starterkit?schema=public"

# Contoh pakai Docker (default dari docker-compose):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/starterkit?schema=public"

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_ACCESS_SECRET="your-access-secret-key-change-this-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-change-this-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# ============================================
# SERVER CONFIGURATION
# ============================================
CORS_ORIGIN="http://localhost:5173"
PORT=3000
